
<HTML>
<HEAD>
<META NAME="GENERATOR" Content="Microsoft Visual Studio 6.0">
<meta http-equiv="Content-Type" content="text/html; charset=gb2312">
<SCRIPT ID=clientEventHandlersJS LANGUAGE=javascript>
<!--

    function user_onblur(o) {
        //window.loginForm.pwd.focus();
        //window.loginForm.pwd.value="";
        //o.select();
    }

    function Sbt_onclick() {
        if (loginForm.user.value == "") {
            alert("请填入用户名！");
            window.loginForm.user.focus();
            return false;
        }
        if (loginForm.pwd.value == "") {
            alert("请输入密码！");
            window.loginForm.pwd.focus();
            return false;
        }

        netlogin.CheckLogin(true, loginForm.user.value, loginForm.pwd.value);
        window.loginForm.submit();       
    }

    function pwd_onkeypress() {
        window.loginForm.Sbt.disabled = false;
    }

    function user_onfocus(o) {
        window.loginForm.Sbt.disabled = true;
        o.select();
    }

    function document_onkeydown() {
        if (window.event.keyCode == 13 && window.loginForm.Sbt.disabled == false) {
            Sbt_onclick();
        }
    }
    function Sbt_onkeypress() {
        if (window.event.keyCode == 13 && window.loginForm.Sbt.disabled == false) {
            Sbt_onclick();
        }
    }

    function CheckLogin(auto, userid, psw) {

        loginForm.user.value = userid;
        loginForm.pwd.value = psw;
        loginForm.auto.value = auto;
        window.loginForm.submit();
    }

  
//-->
</SCRIPT>

<SCRIPT LANGUAGE=javascript FOR=document EVENT=onkeydown>
<!--
 document_onkeydown()
//-->
</SCRIPT>
<title>南京航空航天大学教务信息系统用户登录</title>
</HEAD>
<BODY bgcolor="D8E7EA" LANGUAGE=javascript onload="return window.loginForm.user.focus();" >

      <form name="loginForm" id="loginForm" method="post" action="check.asp" target="_self" >
        <table cellspacing=1 cellpadding=1 width="190" align=center border=0 bordercolor="#333333">
          <tr> 
            <td width="30%" nowrap align=right> 
             <font size=2>用户名:</font>
            </td>
            <td width="70%" align=left> 
              <input id=user name=user LANGUAGE=javascript onblur="return user_onblur(this)" onfocus="return user_onfocus(this)" 
                style="HEIGHT: 21px; WIDTH: 120px; COLOR:blue;background-color: #bbffbb;}"  AUTOCOMPLETE="off"
                value=''>
            </td>
          </tr>
          <tr> 
            <td width="30%" nowrap align=right> 
              <font size=2>密码:</font>
            </td>
            <td width="70%"  align=left> 
              <input id=pwd name=pwd type=password LANGUAGE=javascript onkeypress="return pwd_onkeypress()" style="HEIGHT: 21px; WIDTH: 120px; COLOR:blue;background-color: #bbffbb;}" AUTOCOMPLETE="off" onfocus="return this.select();" >
            </td>
          </tr>
          <tr> 
            <td width="30%" align=right>
            <font size=2>验证码:</font>
            </td>
            <td width="70%">
              <input id="vcode" name="vcode" type="text" style="HEIGHT: 21px; WIDTH: 40px; COLOR:blue;background-color: #bbffbb;}"  onfocus="return this.select();" />
              <img src="GetCode.asp" alt="验证码,看不清楚?请点击刷新验证码" style="cursor : pointer;" onclick="this.src='GetCode.asp';" style="HEIGHT: 20px; WIDTH: 75px; COLOR:blue;background-color: #bbffbb;}" /> 
            </td>
          </tr>
          <tr> 
            <td width="60%" colspan=2 nowrap align="center">
            <font size=1>
              <input id="Sbt" type="button" value=" 确认 " name="Sbt" LANGUAGE="javascript" onclick="return Sbt_onclick()" disabled 
              onkeypress="return Sbt_onkeypress()" style="HEIGHT: 21px; WIDTH: 60px;" /><input id="reset1" type="reset" value=" 重置 " 
              name="reset1" style="HEIGHT: 21px; WIDTH: 50px;" /><input id="reset2" type="button" value="忘记密码" name="reset2" style="HEIGHT: 21px; WIDTH: 65px;" 
              onclick="alert('学生可联系辅导员或教务员重置密码。\n\n教师可联系教学秘书或教务员重置密码。')" />
              </font>
            </td>
          </tr>
        </table>
        <p><input id="auto" name="auto" type="hidden" value="false"/>
        </p>
      </form>

<P align="center"> 

<iframe src="/NetEa/Login.aspx" width="0" height="0" id="netlogin" name="netlogin"></iframe>

</BODY>
</HTML>


